<div class="container">
  <%= search_form_for @q, url: homes_show_path do |f| %>
    <div class="form-group">
      <%= f.label :name_or_animal, "キーワード" %>
      <%= f.search_field :name_or_animal_cont, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :sex, "性別" %><br />
      <%= f.radio_button :sex_eq, "", checked: true %>
      <%= f.label :nothing, "指定しない" %>
      <%= f.radio_button :sex_eq, 0 %>
      <%= f.label :man, "男性" %>
      <%= f.radio_button :sex_eq, 1 %>
      <%= f.label :woman, "女性" %>
      <%= f.radio_button :sex_eq, 2 %>
      <%= f.label :other, "その他" %>
      <%= f.radio_button :sex_eq, 3 %>
      <%= f.label :no_answer, "無回答" %>
    </div>

    <div class="form-group">
      <%= f.label :birth_date, "生年月日" %>
      <%= f.date_field :birth_date_gteq, include_blank: true, class: 'form-control' %>
      〜
      <%= f.date_field :birth_date_lteq, include_blank: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "検索", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <table class="table">
    <tr>
      <th><%= sort_link(@q, :name, "ユーザ名") %></th>
      <th><%= sort_link(@q, :animal, "好きな動物") %></th>
      <th>自己紹介</th>
    </tr>
    <% if @users.any? %>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, users_show_path(id:user.id) %></td>
          <td><%= user.animal %></td>
          <td><%= user.profile %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>