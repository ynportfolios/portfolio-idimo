<div class="container">
  <% encourage_following_notice_messages! %>
  <%= render 'shared/flash_messages' %>
  <h1>ダイレクトメッセージ</h1>
  <hr>
  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <p class="text-break"><%= m.content %></p>
      <small class="form-text text-muted">by <%= link_to m.user.name,
        users_show_path(id: m.user.id) %>さん</small>
      <hr>
    <% end %>
  <% else %>
  <% end %>

  <%= form_for @message do |f| %>
    <div class="form-group">
      <%= f.text_field :content, class: 'form-control' %>

      <small class="form-text text-muted">メッセージを入力してください</small>
    </div>
    <div class="form-group">
      <%= f.hidden_field :room_id, :value => @room.id %>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>